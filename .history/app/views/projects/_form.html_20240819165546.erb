<%= form_with(model: project, url: project.persisted? ? project_path(project) : projects_path, method: :post) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :user_id, 'Select Users' %>
    <%= form.collection_check_boxes :user_ids, User.all, :id, :email %>
  </div>

  <div class="field">
    <%= form.fields_for :users do |user_form| %>
      <%= user_form.label :name, style: "display: block" %>
      <%= user_form.text_field :name %>

      <%= user_form.label :email, style: "display: block" %>
      <%= user_form.email_field :email %>

      <%= user_form.label :password, style: "display: block" %>
      <%= user_form.password_field :password %>

      <%= user_form.label :password_confirmation, style: "display: block" %>
      <%= user_form.password_field :password_confirmation %>

      <%= user_form.check_box :_destroy %>
      <%= user_form.label :_destroy, "Remove this user" %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
